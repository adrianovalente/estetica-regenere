<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.adriano.esteticaregenere_android.Activities.LoginActivity">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:id="@+id/loginImageView"
        android:layout_alignBottom="@+id/loginLabel"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:src="@drawable/regenere" />

    <TextView android:text="Olá, cliente! Aqui você pode marcar novas consultas e se lembrar das que já marcou!\nPara começar, digite seu email e sua senha" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginLabel"
        android:gravity="center"
        android:textSize="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="194dp"
        android:paddingRight="15dp"
        android:paddingLeft="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/loginTextView"
        android:layout_below="@+id/loginImageView"
        android:layout_alignLeft="@+id/loginImageView"
        android:layout_alignStart="@+id/loginImageView"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordTextView"
        android:layout_below="@+id/loginTextView"
        android:layout_alignLeft="@+id/loginTextView"
        android:layout_alignStart="@+id/loginTextView"
        android:layout_marginTop="15dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entrar no app"
        android:id="@+id/loginButton"
        android:layout_below="@+id/passwordTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:onClick="onLoginButtonPressed"/>


</RelativeLayout>
