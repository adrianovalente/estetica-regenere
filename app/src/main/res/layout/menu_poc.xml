<?xml version="1.0" encoding="utf-8"?>
<com.example.adriano.esteticaregenere_android.Components.MenuContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="234px"
            android:layout_height="156px"
            android:src="@drawable/regenere"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="65px"
            />

        <ListView
            android:layout_marginTop="70px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/menuListView"/>

        <LinearLayout
            android:background="#F5F5F5"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:onClick="onAboutButtonClicked"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="Roboto"
                android:textColor="#909094"
                android:text="VersÃ£o 0.1.0"
                android:layout_marginTop="10px"
                android:layout_marginBottom="0px"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0px"
                android:layout_marginBottom="0px"
                android:paddingTop="10px"
                android:layout_gravity="center_horizontal"
                android:fontFamily="Roboto"
                android:textColor="#811320"
                android:text="by dri9595"
                android:textStyle="bold"
                />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".HomeActivity">


        <com.example.adriano.esteticaregenere_android.Components.HomeHeaderView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="true"
            android:id="@+id/homeHeaderView"
            android:layout_marginLeft="0dp"
            android:layout_margin="0dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="0dp"
            android:padding="0dp"></com.example.adriano.esteticaregenere_android.Components.HomeHeaderView>

        <ListView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/listview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/homeHeaderView" />

        <RelativeLayout
            android:id="@+id/loadingHome"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#d0d0d0">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true" />
        </RelativeLayout>

    </RelativeLayout>


</com.example.adriano.esteticaregenere_android.Components.MenuContainer>