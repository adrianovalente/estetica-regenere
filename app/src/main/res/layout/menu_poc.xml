<?xml version="1.0" encoding="utf-8"?>
<com.example.adriano.esteticaregenere_android.Components.MenuContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="234px"
            android:layout_height="156px"
            android:src="@drawable/regenere"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="65px"
            />

        <ListView
            android:layout_marginTop="70px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/menuListView"/>

        <LinearLayout
            android:background="#F5F5F5"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="100px"
            android:onClick="onAboutButtonClicked"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="Roboto"
                android:textColor="#909094"
                android:text="VersÃ£o 0.1.0"
                android:layout_marginTop="10px"
                android:layout_marginBottom="0px"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0px"
                android:layout_marginBottom="0px"
                android:paddingTop="10px"
                android:layout_gravity="center_horizontal"
                android:fontFamily="Roboto"
                android:textColor="#811320"
                android:text="by dri9595"
                android:textStyle="bold"
                />

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/page_container">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/click_view"
            android:onClick="toggleMenu">
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/loadingView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="#d0d0d0">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true" />
        </RelativeLayout>

    </RelativeLayout>

</com.example.adriano.esteticaregenere_android.Components.MenuContainer>